<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Users info</h2>

      <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> error prohibited this obj from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <%= form_with model: @user, local:true do |f| %>
        <div class="field">
          <label>Name</label>
          <%= f.text_field :name, class:"form-control name" %>
        </div>
        <div class="field">
          <label>Image</label><br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像"%>
        </div>
        <div class="field">
          <label>Introducton</label>
          <%= f.text_field :introduction,  class:"form-control introduction" %>
        </div>
        <div class="action">
          <%= f.submit 'Update User', class:"btn btn-secondary"; %>
        </div>
      <% end %>
    </div>
  </div>
</div>