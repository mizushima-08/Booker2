<h1>Users info</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> error prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_with model: @user, local:true do |f| %>
  <h4>name</h4>
  <%= f.text_field :name %>
  <h4>Image</h4>
  <!--ここにnoimageの追加-->
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  <h4>introduction</h4>
  <%= f.text_field :introduction %>
  <%= f.submit 'プロフィール編集', class:"btn btn-success"; %>
<% end %>