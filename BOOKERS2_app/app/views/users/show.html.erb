<%= render 'layouts/flash' %>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book_new: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table tablehover table-inverse">
        <thread>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th></th>
          </tr>
        </thread>
        <tbody>
          <% @books.each do |f| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to f.title, book_path(f) %></td>
              <td><%= f.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

