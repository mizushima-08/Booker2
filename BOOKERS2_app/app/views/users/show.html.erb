<h1>User info</h1>
<%= form_with model: @user, local:true do |f| %>
  <%= f.attachment_field :profile_image %>
  <h4>name <%= @user.name %></h4>
  <h4>introduction</h4>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
<% end %>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>opinion</h4>
  <%= f.text_field :body %>
  <br><%= f.submit 'create book' %>
<% end %>

<h1>Books</h1>
<p>title</p>
<p>opinion</p>
<% @books.each do |f| %>
  <%= f.title %>
  <%= f.body %>
  <P><%= link_to "Edit", edit_book_path(f) %></p>
  <p><%= link_to "Destroy", book_path(f),  method: :delete, "data-confirm" => "Are you sure?" %></p>
<% end %>

