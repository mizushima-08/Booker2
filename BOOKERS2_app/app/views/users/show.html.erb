<%= render 'layouts/flash' %>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= attachment_image_tag @user, :profile_image, size: '63x63', fallback: "no_image2.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog";  %>
      </div>
      
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book_new, local:true do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <label>opinion</label>
          <%= f.text_area :body, class:"form-control book_body"; %>
        </div>
        <%= f.submit 'Create Book', class:"btn btn-success"; %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table tablehover table-inverse">
        <thread>
          <tr>
            <th></th>
            <th>title</th>
            <th>opinion</th>
            <th></th>
          </tr>
        </thread>
        <tbody>
          <% @books.each do |f| %>
            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                  <%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg" %>
                <% end %>
              </td>
              <td><%= link_to f.title, book_path(f) %></td>
              <td><%= f.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

