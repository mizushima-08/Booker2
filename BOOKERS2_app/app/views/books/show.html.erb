<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
   
<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= form_with model: @user, local:true do |f| %>
        <%= attachment_image_tag @user, :profile_image, size: '63x63', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <!--<th>///////////////</th>-->
            </tr>
            <tr>
              <th>introduction</th>
              <!--<th>//////////////</th>-->
            </tr>
          </tbody>
        </table>
        <div class="row">
          <!--////////////////////////////-->
        </div>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <label>opinion</label>
          <%= f.text_area :body, class:"form-control book_body"; %>
        </div>
        <%= f.submit 'create book', class:"btn btn-success"; %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table tablehover table-invers">
        <tbody>
          <tr>
            <%= form_with model: @book, local:true do |f| %>
              <td>
                <%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg" %>
                <!--下の入力を変更する-->
                <p>"ruby"</p> 
              </td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success"; %></td>
              <td><%= link_to "Destroy", book_path(@book),  method: :delete, "data-confirm" => "本当に消しますか?",  class:"btn btn-sm btn-danger"; %></td>
            <% end %>
          </tr>
        </tbody>  
      </table>
    </div>
  </div>
</div>
