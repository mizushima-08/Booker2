<p id="notice"></p>
<div class="container px-5 px-sm-0">
  
  <% if @book_new.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book_new.errors.count, "error") %> error prohibited this obj from being saved:</h2>
        <ul>
          <% @book_new.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book_new: @book_new %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
            <tr>
              <td>
                <%= link_to user_path(f.user_id) do %>
                  <%= attachment_image_tag f.user , :profile_image, size:'40x40', fallback: "no_image.jpg" %>
                <% end %>
              </td>

              <td><%= link_to f.title, book_path(f) %></td>
              <td><%= f.body %></td>
            </tr>
            <% end %>
        </tbody>  
      </table>
    </div>
  </div>
</div>
