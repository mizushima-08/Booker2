<p id="notice"></p>
<div class="container px-5 px-sm-0">
  
  <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> error prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= form_with model: @user, local:true do |f| %>
        <%= attachment_image_tag @user, :profile_image, size: '63x63', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <!--///////////////////-->
            </tr>
            <tr>
              <th>introduction</th>
              <!--<th>//////////////</th>-->
            </tr>
          </tbody>
        </table>
        <div class="row">
          <!--////////////////////////////-->
        </div>
      <% end %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <label>opinion</label>
          <%= f.text_area :body, class:"form-control book_body"; %>
        </div>
        <%= f.submit 'create book', class:"btn btn-success"; %>
      <% end %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |f| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, size:'40x40', fallback: "no_image.jpg" %></td>
              <td><%= link_to f.title, book_path(f) %></td>
              <td><%= f.body %></td>
              <td></td>
            </tr>
            <% end %>
        </tbody>  
      </table>
    </div>
  </div>
</div>
